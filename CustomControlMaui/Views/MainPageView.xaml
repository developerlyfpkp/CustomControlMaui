<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomControlMaui.Views.MainPageView" 
             xmlns:control="clr-namespace:CustomControlMaui.Controls"
             Title="MainPageView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"></RowDefinition>

            <RowDefinition Height="65*"></RowDefinition>

            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Frame Grid.Row="0" Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="Fill" />
        <Frame BorderColor="#FFFFFF" BackgroundColor="#FFFFFF" Grid.Row="1" Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" Margin="0" Padding="0" HasShadow="False" IsClippedToBounds="True">
             
        </Frame>
        
        <control:BottomMenu Background="#fff" Grid.Row="3" Grid.Column="0"  HorizontalOptions="FillAndExpand" VerticalOptions="End"></control:BottomMenu>
        
    </Grid>
   

     

</ContentPage>